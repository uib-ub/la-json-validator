{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "concept.json",
	"title": "Concept Schema",
	"description": "_crm:E55\\_Type_\nConcepts, Subjects and other categorizations.\nSee: [API](https://linked.art/api/1.0/endpoint/place/) | [Model](https://linked.art/model/)",
	"type": "object",
	"properties": {
		"@context": {
			"$ref": "core.json#/$defs/ContextStringOrArray"
		},
		"id": {
			"$ref": "core.json#/$defs/idProp"
		},
		"type": {
			"allOf": [
				{
					"title": "General",
					"$ref": "core.json#/$defs/typeProp"
				},
				{
					"title": "Specific",
					"type": "string",
					"enum": [
						"Type",
						"Currency",
						"Material",
						"Language",
						"MeasurementUnit"
					]
				}
			]
		},
		"_label": {
			"$ref": "core.json#/$defs/labelProp"
		},
		"classified_as": {
			"$ref": "core.json#/$defs/classified_asProp"
		},
		"identified_by": {
			"$ref": "core.json#/$defs/identified_byProp"
		},
		"referred_to_by": {
			"$ref": "core.json#/$defs/referred_to_byProp"
		},
		"equivalent": {
			"allOf": [
				{
					"title": "General",
					"$ref": "core.json#/$defs/equivalentProp"
				},
				{
					"title": "Specific",
					"description": "List of concept entities",
					"type": "array",
					"items": {
						"$ref": "core.json#/$defs/AnyTypeRef"
					}
				}
			]
		},
		"representation": {
			"$ref": "core.json#/$defs/representationProp"
		},
		"member_of": {
			"$ref": "core.json#/$defs/member_ofSetProp"
		},
		"subject_of": {
			"$ref": "core.json#/$defs/subject_ofProp"
		},
		"attributed_by": {
			"$ref": "core.json#/$defs/attributed_byRelProp"
		},
		"created_by": {
			"title": "crm:P94i_was_created_by",
			"$ref": "core.json#/$defs/Creation"
		},
		"broader": {
			"title": "skos:broader",
			"description": "This concept is contained within one or more larger/broader concept entities",
			"type": "array",
			"items": {
				"$ref": "core.json#/$defs/AnyTypeRef"
			}
		}
	},
	"required": [
		"@context",
		"id",
		"type",
		"_label"
	],
	"additionalProperties": false
}